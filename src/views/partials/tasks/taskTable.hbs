<table>
    <thead>
        <tr>
            <th>N.</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Operaciones</th>
        </tr>
    </thead>

    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}} </td>
            <td>{{title}} </td>
            <td>{{description}} </td>
            <td>
                {{#if done}}    
                    <a href="/toggleDone/{{_id}}">Pendiente</a>
                {{else}}
                    <a href="/toggleDone/{{_id}}">Listo</a>
                {{/if}}
                <a href="/delete/{{_id}}">Eliminar</a>
                <a href="/edit/{{_id}}">Actualizar</a>
            </td>
        </tr>
        
    {{/each}}

    </tbody>
</table>