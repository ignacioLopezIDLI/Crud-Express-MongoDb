{{#if tasks}}
    <table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th>Operaciones</th>
        </tr>
    </thead>

    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}} </td>
            <td>{{title}} </td>
            <td>{{description}} </td>
            <td>
                {{#if done}}    
                    <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Pendiente</a>
                {{else}}
                    <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Listo</a>
                {{/if}}
                <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Eliminar</a>
                <a href="/tasks/{{_id}}/edit" class="btn btn-info">Actualizar</a>
            </td>
        </tr>
        
    {{/each}}

    </tbody>
</table>
    {{else}}    
        <div class="h-100 d-flex align-items justify-content-center">
            <div class="text-center text-white">
            <h1>Sin Tareas</h1>
            <img src="/icons/lapiz.png" style="width: 160px; height: auto;" > 
            </div>
        </div>
        {{/if}}                                                                                                 